<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_smgs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back3"
    android:adjustViewBounds="true"
    tools:context="com.example.michaelryan.hellodroid.SMGs">

    <android.support.v7.widget.Toolbar
        android:id="@+id/smgs_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/mp7_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mp7_button"
        android:text="MP7"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/mp9_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mp9_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mp9_button"
        android:text="MP9"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/p90_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/p90_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="p90_button"
        android:text="P90"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ppbizon_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ppbizon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ppbizon_button"
        android:text="PP BIZON"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ump45_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mac10_button"
        android:layout_width="match_parent"
        android:onClick="mac10_button"
        android:text="MAC-10"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/mp7_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ump45_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ump45_button"
        android:text="UMP-45"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
