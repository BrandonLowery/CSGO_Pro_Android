<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_assault_rifles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back3"
    android:adjustViewBounds="true"
    tools:context="com.example.michaelryan.hellodroid.AssaultRifles">

    <android.support.v7.widget.Toolbar
        android:id="@+id/assault_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/ssg_08_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ssg_08_button"
        android:text="SSG-08"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scar_20_button"
        android:layout_width="match_parent"
        android:onClick="scar_20_button"
        android:text="SCAR-20"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assault_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/g3_sg1_button"
        android:layout_width="match_parent"
        android:onClick="g3_sg1_button"
        android:text="G3-SG1"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/ssg_08_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ak47_button"
        android:layout_width="match_parent"
        android:onClick="ak47_button"
        android:text="AK47"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/m4a4_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/sg_553_button"
        android:layout_width="match_parent"
        android:onClick="sg_553_button"
        android:text="SG-553"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scar_20_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/famas_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="famas_button"
        android:text="FAMAS"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_below="@+id/sg_553_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/galil_ar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="galil_ar_button"
        android:text="GALIL-AR"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/aug_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/aug_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="aug_button"
        android:text="AUG"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_alignTop="@+id/famas_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/m4a1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="m4a1_button"
        android:text="M4-A1"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_below="@+id/galil_ar_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/m4_a1s_button"
        android:layout_width="match_parent"
        android:onClick="m4a1s_button"
        android:text="M4-A1S"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m4a1_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/m4a4_button"
        android:layout_width="match_parent"
        android:onClick="m4a4_button"
        android:text="M4-A4"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="?attr/colorControlActivated"
        android:layout_height="wrap_content"
        android:layout_above="@+id/g3_sg1_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />


</RelativeLayout>
